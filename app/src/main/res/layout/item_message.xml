<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:layoutDirection="ltr"
    android:orientation="horizontal"
    android:padding="8dp"
    android:textDirection="ltr">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:visibility="gone">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/iv_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:siBorderColor="@android:color/white"
            app:siBorderWidth="2dp"
            app:siRadius="12dp"
            app:siSquare="true" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/msg_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:baselineAligned="false"
        android:gravity="start"
        android:orientation="vertical">


        <com.cpiz.android.bubbleview.BubbleTextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:text="Fashion is a popular style or practice foreveryone"
            android:textAlignment="textStart"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="normal"
            app:bb_arrowDirection="Left"
            app:bb_arrowPosPolicy="SelfBegin"
            app:bb_cornerRadius="12dp"
            app:bb_fillColor="@android:color/holo_red_light" />


        <TextView
            android:id="@+id/tv_time_stamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="02:42 PM"
            android:textSize="12sp"
            android:textStyle="normal" />

    </LinearLayout>

</LinearLayout>